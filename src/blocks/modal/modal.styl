.modal
	position fixed
	top 0
	left 0
	width 100%
	height 100vh
	background-color rgba(0, 0, 0, 0.7)
	overflow-y scroll
	opacity 0
	z-index -1

	&--open
		opacity 1
		z-index 10
		transition all 0.2s ease-in-out

	&--close
		opacity 0
		z-index -1
		transition all 0.2s ease-in-out 0.5s

.modal__content
	position absolute
	bottom 0
	left 50%
	transform translate(-50%, 100%)
	width 50%
	padding 10px
	padding-top 40px
	border-radius 20px
	background-color #fff

	&--open
		bottom 50%
		transform translate(-50%, 50%)
		transition all 0.5s cubic-bezier(0.17, 0.67, 0.52, 1) 0.1s

	&--openup
		bottom auto
		top 0
		transform translateX(-50%)
		transition all 0.5s cubic-bezier(0.17, 0.67, 0.52, 1) 0.1s

	&--close
		bottom 0
		transform translate(-50%, 100%)
		transition all 0.5s cubic-bezier(0.17, 0.67, 0.52, 1) 0.1s

	&--closeup
		top 0
		transform translate(-50%, 100%)
		transition all 0.5s cubic-bezier(0.17, 0.67, 0.52, 1) 0.1s

.close
	position absolute
	top 20px
	right 20px