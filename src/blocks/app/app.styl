.app
	display flex
	justify-content center
	align-items top
	flex-wrap wrap
	padding 50px
	margin-bottom 10px
	border 1px solid #ccc
	background-color #fff

// Controls

.app__controls
	display flex
	flex-direction column
	justify-content flex-start
	padding-right 50px
	border-right 1px solid #ccc

.temp
	display flex
	justify-content center
	align-items center
	margin-bottom 30px
	font-size 0

.temp__btn
	position relative
	width 50px
	height 50px
	padding 15px
	font-size 20px
	border none
	border-radius 50%
	background-color #fff
	cursor pointer

	&[disabled] .temp__btn-icon
		fill #aaa

.temp__btn-icon
	width 20px
	height 20px

.temp__current
	width 100px
	margin 0 30px
	font-size 40px
	font-weight 700
	line-height 50px
	text-align center
	border none

.play
	position relative
	padding 5px 20px
	font-size 30px
	border none
	background-color #fff
	cursor pointer

// Settings

.app__settings
	padding-left 50px

.timing
	display flex
	justify-content center
	align-items center
	margin-bottom 20px

.timing__wrapper
	display flex
	flex-direction column
	justify-content center
	align-items center

.timing__btn
	width 30px
	height 20px
	line-height 20px
	border none
	background-color transparent
	transition opacity 0.2s ease-in
	cursor pointer

.timing__btn-icon
	width 10px
	height 10px

.timing__number,
.timing__slash
	font-size 40px
	font-weight 700
	user-select none

.timing__number
	width 80px
	padding 10px 0
	padding-left 0
	text-align center

// Checkboxes

.checkbox__wrapper + .checkbox__wrapper
	margin-top 10px

.label
	position relative
	padding-left 50px
	line-height 30px
	cursor pointer
	transition color 0.15s ease-in, text-shadow 0.15s ease-in

.label::before
	content ''
	position absolute
	top 50%
	left 0
	transform translateY(-50%)
	display block
	width 30px
	height 30px
	border 4px solid #aaa
	border-radius 30px
	background-color transparent
	transition border-color 0.15s ease-in

.label::after
	content ''
	position absolute
	top 50%
	left 0
	transform translate(15px, -50%)
	display block
	width 0
	height 0
	border-radius 50%
	background-color transparent
	transition width 0.15s ease-in, height 0.15s ease-in, transform 0.15s ease-in, background-color 0.15s ease-in

.checkbox:checked + .label
	color #279b1f
	text-shadow 0 0 5px rgba(0, 0, 0, 0.2)

.checkbox:checked + .label::before
	border-color #33c429

.checkbox:checked + .label::after
	width 16px
	height 16px
	transform translate(7px, -50%)
	background-color #33c429

.checkbox:focus + label::before
	outline 2px solid #6ad6f7
	outline-offset 2px

.tips
	color #777

audio
	display none
