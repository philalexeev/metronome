.app
	display flex
	justify-content center
	align-items center
	width 50%
	height 50%
	border 3px solid #ccc
	border-radius 30px
	background-color #fff

.app__inner
	display flex
	flex-direction column
	justify-content space-between

.temp
	display flex
	justify-content center
	align-items center
	margin-bottom 30px
	font-size 0

.temp__btn
	position relative
	width 50px
	height 50px
	padding 15px
	font-size 20px
	border none
	border-radius 50%
	background-color #fff
	box-shadow 0 0 10px 0 rgba(0, 0, 0, 0.3)
	cursor pointer
	transition all 0.1s ease-in

	&:hover
		box-shadow 0 0 20px 0 rgba(0, 0, 0, 0.3)

.temp__btn-icon
	width 20px
	height 20px

.temp__current
	width 100px
	height 50px
	margin 0 30px
	font-size 40px
	font-weight 700
	text-align center
	border none

.play
	position relative
	padding 5px 20px
	font-size 30px
	border none
	background-color #fff
	box-shadow 0 0 10px 0 rgba(0, 0, 0, 0.3)
	transition all 0.2s ease-in
	cursor pointer

	&:hover
		box-shadow 0 0 20px 0 rgba(0, 0, 0, 0.3)
