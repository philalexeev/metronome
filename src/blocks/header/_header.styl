.header__wrapper
	display flex
	padding 0 50px
	justify-content space-between
	align-items center

.header__logo-wrapper
	padding 20px 0

.nav
	position absolute
	top 0
	left -100%
	z-index -1
	width 100%
	height 100vh
	transition all .2s ease-in-out
	background-color #000

	@media screen and (min-width 768px)
		position static
		top auto
		left auto
		z-index 1
		width auto
		height auto
		background-color transparent
	
.nav--open
	left 0
	z-index 100

.nav-close-btn
	position absolute
	top 30px
	right 50px
	display block
	width 30px
	height 30px
	cursor pointer
	border none
	background-color transparent

	@media screen and (min-width 768px)
		display none

.nav-close-btn::before,
.nav-close-btn::after
	position absolute
	top 50%
	left 0
	display block
	width 100%
	height 4px
	content ''
	background-color #fff

.nav-close-btn::before
	transform rotate(45deg)

.nav-close-btn::after
	transform rotate(-45deg)

.nav__list
	display flex
	flex-direction column
	height 100%
	list-style none
	justify-content center
	align-items center

	@media screen and (min-width 768px)
		flex-direction row

.nav__item
	margin-right 0

	@media screen and (min-width 768px)
		margin-right 30px
	
.nav__item:last-child
	margin-right 0

.nav__link
	display inline-block
	padding 20px 0
	color #fff

	@media screen and (min-width 768px)
		color #000
	
.nav-open-btn
	position relative
	display block
	width 30px
	height 20px
	cursor pointer
	border none
	background-color transparent

	@media screen and (min-width 768px)
		display none
	
.nav-open-btn:hover::before
	background-color #777
	box-shadow 0 8px 0 0 #777, 0 16px 0 0 #777

.nav-open-btn::before
	position absolute
	top 0
	left 0
	display block
	width 100%
	height 4px
	content ''
	transition all .2s ease-in-out
	transform-origin 2px 2px
	background-color #000
	box-shadow 0 8px 0 0 #000, 0 16px 0 0 #000

